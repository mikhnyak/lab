#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main()
{
    int k,n,i;
    
      printf("enter n\n");
      scanf("%d", &n);
      printf("enter k\n");
      scanf("%d", &k);
      
      int mas[n];
      for (i=0; i<n; i++)
       {
          mas[i]= rand()%100;
          printf("%d |", mas[i]);
       }
        printf(" \n mas1: \n");
        
      for (i=(k+1); i<n; i++)
       {
          printf("%d ", mas[i]);
       }
      for (i=0; i<(k-1); i++)
       {
          printf("%d ", mas[i]);
       }
       
        printf(" \n mas2: \n");
        
      for (i=k; i<n; i++)
       {
          printf("%d ", mas[i]);
       }
      for (i=0; i<k; i++)
       {
          printf("%d ", mas[i]);
       }
       
       printf(" \n mas2: \n");
       
      for (i=k; i<n; i++)
       {
          if ((mas[i] % 2) == 0)
            {
               printf("%d ", mas[i]);
            }
           else
           mas[i]=0;
       }
      for (i=0; i<k; i++)
       {
          if ((mas[i] % 2) == 0)
            {
               printf("%d ", mas[i]);
            }
           else
           mas[i]=0;
        }
       
     return 0;  
}
